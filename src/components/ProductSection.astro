<section id="products" class="py-20 md:py-32 bg-white overflow-hidden">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-4xl mx-auto mb-16 space-y-6 animate-on-scroll">
            <p class="text-sm tracking-[0.3em] text-xverse-red uppercase font-bold">Products</p>
            <h2 class="text-4xl md:text-5xl font-bold text-slate-900 tracking-tight">製品紹介</h2>
            <p class="text-xl text-slate-700 leading-relaxed">統合基盤 <span class="text-xverse-red font-bold">X-VERSE</span> 上で展開されるプロダクト群</p>
        </div>
        <div class="grid md:grid-cols-1 lg:grid-cols-2 gap-8 stagger-container">
            <a href="/logi/" class="group relative block aspect-[16/9] rounded-3xl overflow-hidden bg-slate-900 shadow-xl transition-all duration-500 hover:shadow-2xl hover:shadow-red-600/10 stagger-item">
                <div class="absolute inset-0 z-0">
                    <div class="absolute inset-0 bg-gradient-to-br from-red-600/40 via-transparent to-transparent z-10"></div>
                    <img src="/assets/images/product_hero.png" alt="X-VERSE Logi" class="w-full h-full object-cover opacity-50 group-hover:scale-110 transition-transform duration-700" />
                </div>
                <div class="absolute inset-0 z-20 p-10 flex flex-col justify-end">
                    <div class="flex justify-between items-end transform group-hover:translate-y-[-8px] transition-transform duration-500">
                        <div class="space-y-3">
                            <h3 class="text-4xl font-bold text-white tracking-tight">Logi</h3>
                            <p class="text-lg text-white/80">次世代倉庫3Dデジタルツイン</p>
                        </div>
                        <div class="w-14 h-14 rounded-full bg-white/20 backdrop-blur-md flex items-center justify-center text-white group-hover:bg-xverse-red transition-all duration-500">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </div>
                    </div>
                </div>
            </a>
            <div class="relative aspect-[16/9] rounded-3xl overflow-hidden bg-slate-100 flex items-center justify-center border-2 border-dashed border-slate-300 stagger-item">
                <div class="text-center space-y-2">
                    <h3 class="text-2xl font-bold text-slate-400">Coming Soon</h3>
                    <p class="text-slate-400 font-mono text-sm tracking-widest uppercase">Next Generation Product</p>
                </div>
            </div>
        </div>
    </div>
</section>
